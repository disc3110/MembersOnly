
<div class="w-50 my-3">
<span class="text-center fs-1 fw-bold my-5"> Create your own post </span>
<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3 row">
    <%= form.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="field mb-3 row">
    <%= form.label :body, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.text_field :body, class: "form-control" %>
    </div>
  </div>

  <div class="actions ">
    <%= form.submit %>
  </div>
<% end %>
</div>